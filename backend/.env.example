# Server Configuration
NODE_ENV=development
PORT=3001
BACKEND_URL=http://localhost:3001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-in-production
JWT_EXPIRY=8h

# Metadata Database Configuration
# Choose database type: 'turso' (default) or 'mysql'
DB_TYPE=turso

# Turso/SQLite Database Configuration (when DB_TYPE=turso)
# Get these from: turso db create sql-browser-meta
TURSO_DB_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token

# Or use local SQLite for development
# TURSO_DB_URL=file:./local.db

# MySQL Database Configuration (when DB_TYPE=mysql)
# Use this for on-premise deployments without cloud connectivity
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=sqlbrowser
# MYSQL_PASSWORD=your-mysql-password
# MYSQL_DATABASE=sql_browser_metadata

# Encryption Key (for connection string encryption)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-64-character-hex-encryption-key-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS
CORS_ORIGIN=http://localhost:5173

# Query Execution Limits (defaults, overridden by role)
DEFAULT_QUERY_TIMEOUT_MS=30000
DEFAULT_MAX_ROWS=1000
